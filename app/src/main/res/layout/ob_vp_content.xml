<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/ob_vp_tv_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:fontFamily="@font/satisfy"
        android:paddingTop="20dp"
        android:text="Participate And Win Exciting Goodies"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/ob_vp_tv_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oxygen_bold"
        android:includeFontPadding="false"
        android:text="50+"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/ob_vp_tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:fontFamily="@font/oxygen_bold"
        android:text="Fun Filled Events"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#E91E63"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ob_vp_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:fontFamily="@font/open_sans"
        android:padding="10dp"
        android:text="Enjoy to your fullest while gaining creative intellect by being a part of them!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#fff"
        android:textSize="14sp" />


